---
import Base from "../layouts/Base.astro";
import { Image } from "astro:assets";
import ladyImage from "../assets/lady.jpg";
import flowersImage from "../assets/flowers.jpg";
import structureImage from "../assets/structure.jpg";
import Quote from "../components/Quote.astro";
import QuoteComponent from "../components/QuoteComponent.astro";
import SideNav from "../components/SideNav.astro";
---

<Base title="Jack Pitts Photography">
