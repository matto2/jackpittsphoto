---
import Base from "../layouts/Base.astro";
---

<Base title="Jack Photography">
  <div class="mx-4 xl:mx-0 flex">
    <aside class="w-[150px] xl:w-[200px] flex-shrink-0">
      <h3 class="text-lg font-medium text-slate-400 uppercase mt-6 mb-2">
        Galleries
      </h3>
      <ul class="list-none">
        <li class="mb-3">
          <a href="/galleries/people">People</a>
        </li>
        <li class="mb-3">Natural World</li>
        <li class="mb-3">Street</li>
        <li class="mb-3">Portraits/Studio</li>
        <li class="mb-3">Random Oddness</li>
        <li class="mb-3">Structures</li>
      </ul>
      <h3 class="text-lg font-medium text-slate-400 uppercase mt-8 mb-2">
        Projects
      </h3>
      <ul class="list-none">
        <li class="mb-3">
          <a href="/galleries/people">Holy Joe</a>
        </li>
        <li class="mb-3">2004 Democratic Convention</li>
      </ul>
    </aside>
    <section class="w-full md:columns-2 gap-4 mt-8">
      <!-- Larger portrait placeholder on the left -->
      <div class="break-inside-avoid bg-gray-300 aspect-[3/4] mb-4">
        Portrait Image
      </div>

      <!-- Two smaller horizontal placeholders on the right -->
      <div class="break-inside-avoid bg-gray-300 aspect-[4/3] mb-4">
        Horizontal Image 1
      </div>
      <div class="break-inside-avoid bg-gray-300 aspect-[4/3] mb-4">
        Horizontal Image 2
      </div>
    </section>
  </div>
</Base>
