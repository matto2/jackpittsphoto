---
import Base from "../../../layouts/Base.astro";
import Breadcrumbs from "../../../components/Breadcrumbs.astro";
import SideNav from "../../../components/SideNav.astro";
import IMG_01 from "../../../assets/street/01_street.webp";
import IMG_02 from "../../../assets/street/02_street.webp";
import IMG_03 from "../../../assets/street/03_street.webp";
import IMG_04 from "../../../assets/street/04_street.webp";
import IMG_05 from "../../../assets/street/05_street.webp";
import IMG_06 from "../../../assets/street/06_street.webp";
import IMG_07 from "../../../assets/street/07_street.webp";
import IMG_08 from "../../../assets/street/08_street.webp";
import IMG_09 from "../../../assets/street/09_street.webp";
import IMG_10 from "../../../assets/street/10_street.webp";
import IMG_11 from "../../../assets/street/11_street.webp";
import IMG_12 from "../../../assets/street/12_street.webp";
import IMG_13 from "../../../assets/street/13_street.webp";
import IMG_14 from "../../../assets/street/14_street.webp";
import IMG_15 from "../../../assets/street/15_street.webp";
import IMG_16 from "../../../assets/street/16_street.webp";
import IMG_17 from "../../../assets/street/17_street.webp";
import IMG_18 from "../../../assets/street/18_street.webp";
import IMG_19 from "../../../assets/street/19_street.webp";
import IMG_20 from "../../../assets/street/20_street.webp";
import IMG_21 from "../../../assets/street/21_street.webp";
import IMG_22 from "../../../assets/street/22_street.webp";

const images = [
  { src: IMG_01, alt: "Looking Back" },
  { src: IMG_02, alt: "Attention, Lower East Side" },
  { src: IMG_03, alt: "Anticipation at Soap Box Derby" },
  { src: IMG_04, alt: "Lined Up" },
  { src: IMG_05, alt: "Barcelona Bicycle" },
  { src: IMG_06, alt: "Dog With Stroller" },
  { src: IMG_07, alt: "Boy on Bike" },
  { src: IMG_08, alt: "Bat Girl" },
  { src: IMG_09, alt: "Girl and Mom" },
  { src: IMG_10, alt: "Woman in Hat" },
  { src: IMG_11, alt: "Capturing a Princess" },
  { src: IMG_12, alt: "Prague Mini Market" },
  { src: IMG_13, alt: "Lookout" },
  { src: IMG_14, alt: "Good View" },
  { src: IMG_15, alt: "2979 Barcelona Smoker" },
  { src: IMG_16, alt: "Smoker, Mexico City" },
  { src: IMG_17, alt: "Separate But Not Equal" },
  { src: IMG_18, alt: "Three of a Kind" },
  { src: IMG_19, alt: "Bubble Man" },
  { src: IMG_20, alt: "Balloon Couple" },
  { src: IMG_21, alt: "Balance, Washington Square" },
  { src: IMG_22, alt: "Hiding in Plain Sight" },
];
const pageTitle = "Street";

---

<Base title={pageTitle}>
  

  <div class="mx-4 xl:mx-8 flex">
    <aside class="hidden lg:block w-64 flex-shrink-0">
     
      <SideNav />
      
    </aside>
    <div>
      <Breadcrumbs crumb={pageTitle} />
      <div class="pswp-gallery columns-1 md:columns-2 2xl:columns-3 gap-6 space-y-6 mx-4 xl:mx-8" id="botanicalsGallery">
        {
          images.map((image) => (
            <div class="break-inside-avoid mb-6">
              <a
                class="block"
                href={image.src.src}
                data-pswp-width={image.src.width}
                data-pswp-height={image.src.height}
                target="_blank"
              >
                <img
                  class="w-full block"
                  src={image.src.src}
                  alt={image.alt}
                  width={image.src.width}
                  height={image.src.height}
                />
              </a>
              <!-- Caption below the image -->
              <p class="text-sm text-left mt-2 text-gray-600">{image.alt}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>

</Base>