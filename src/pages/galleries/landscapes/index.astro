---
import Base from "../../../layouts/Base.astro";
import Breadcrumbs from "../../../components/Breadcrumbs.astro";
import IMG_01 from "../../../assets/landscapes/01_landscape.webp";
import IMG_02 from "../../../assets/landscapes/02_landscape.webp";
import IMG_03 from "../../../assets/landscapes/03_landscape.webp";
import IMG_04 from "../../../assets/landscapes/04_landscape.webp";
import IMG_05 from "../../../assets/landscapes/05_landscape.webp";
import SideNav from "../../../components/SideNav.astro";
import NextGallery from "../../../components/NextGallery.astro";

const images = [
  { src: IMG_01, alt: "Inverness Pier, Pt. Reyes, CA  2019" },
  { src: IMG_02, alt: "Lost Coast Trail, California, 2020" },
  { src: IMG_03, alt: "Lost Coast Waves, California, 2020" },
  { src: IMG_04, alt: "Belize Sunset - Caye Caulker, 2017" },
  { src: IMG_05, alt: "Jet Trails" },
];
const pageTitle = "Landscapes";

---

<Base title={pageTitle}>
  

  <div class="mt-12 mx-4 xl:mx-8 flex">
    <aside class="hidden lg:block w-64 flex-shrink-0">
     <SideNav />
      
    </aside>
    <div>
      <Breadcrumbs crumb={pageTitle} />
      <div class="pswp-gallery columns-1 md:columns-2 2xl:columns-3 gap-6 space-y-6 mx-4 xl:mx-8" id="botanicalsGallery">
        {
          images.map((image) => (
            <div class="break-inside-avoid mb-6">
              <a
                class="block"
                href={image.src.src}
                data-pswp-width={image.src.width}
                data-pswp-height={image.src.height}
                target="_blank"
              >
                 <div class="w-full h-full overflow-hidden">
  <img
    class="block w-full h-full object-cover transition-transform duration-500 ease-in-out hover:scale-105"
    src={image.src.src}
    alt={image.alt}
    width={image.src.width}
    height={image.src.height}
  />
</div>
              </a>
              <!-- Caption below the image -->
              <p class="text-sm text-left mt-2 text-gray-600">{image.alt}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
<NextGallery url="/galleries/portraits" />
</Base>